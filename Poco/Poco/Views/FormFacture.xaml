        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="0.9*"/>
                <ColumnDefinition Width="0.9*"/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="0,0,2,0" BorderBrush="Black" Grid.Column="0">
                <StackPanel Orientation="Vertical" >
                    <Label FontSize="50" HorizontalContentAlignment="Center" Content="Garniture"/>
                    <StackPanel Name="spGarniture">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton x:Name="btnAvocat" Content="Avocat" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                            <ToggleButton x:Name="btnJalapeno" Content="Jalapeno" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton Name="btnMais" Content="Mais" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                            <ToggleButton Name="btnOignon" Content="Oignon" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton x:Name="btnOignonF" Content="Oignon F" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                            <ToggleButton Name="btnOlive" Content="Olive" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton Name="btnPoivron" Content="Poivron" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                            <ToggleButton Name="btnRiz" Content="Riz" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton x:Name="btnSalade" Content="Salade" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                            <ToggleButton x:Name="btnTomate" Content="Tomate" FontSize="40" Width="210" Height="100" Margin="5,5,5,5" Checked="Button_Checked_Garniture" Unchecked="Button_Unchecked_Garniture"/>
                        </StackPanel>
                    </StackPanel>
                    
                    
                    


                </StackPanel>
            </Border>
            <Border BorderThickness="0,0,2,0" BorderBrush="Black" Grid.Column="1">
                <StackPanel Orientation="Vertical" >
                    <Label FontSize="50" HorizontalContentAlignment="Center" Content="Viandes"/>
                    <StackPanel Name="spViandes">
                        <Button Content="Boeuf" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Viande"/>
                        <Button Content="Dinde" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Viande"/>
                        <Button Content="Poisson" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Viande"/>
                        <Button Content="Porc" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Viande"/>
                        <Button Content="Poulet" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Viande"/>
                        <Button Content="Végé" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Viande"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
            <StackPanel Name="spPlats" Orientation="Vertical" Grid.Column="2">
                <Label FontSize="50" HorizontalContentAlignment="Center" Content="Plats"/>
                <Button Content="Burrito" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Plat"/>
                <Button Content="Fajitas" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Plat"/>
                <Button Content="Nachos" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Plat"/>
                <Button Content="Quesadilla" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Plat"/>
                <Button Content="Tacos" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" Click="ButtonClick_Plat"/>
               
            </StackPanel>
            <Border BorderThickness="0 2 0 0" BorderBrush="Black" Margin="0 20 0 0" Padding="0 20 0 0">
                <Button x:Name="btnAjouter" Content="Ajouter" FontWeight="Bold" FontSize="40" Width="250" Height="100" Margin="5,5,5,5" VerticalAlignment="Bottom" Click="btnAjouter_Click" />
            </Border>
        </Grid>
    </Grid>
</Window>
